
<div class="grid grid-cols-4" id="loading" style="display:none;">
    <div class="col-start-2 col-span-2 p-4 my-4 rounded-lg">
        <h1 class="flex justify-center">Please wait....
            <img src="image/loading.gif" style="width:20px; "/>
        </h1>
    
    </div>
</div>
<div class="grid grid-cols-6 py-3 mx-8">
    <div class="col-start-1 col-span-6">
       
        <%
        if(elections.length==0)
        {
        %>
        <p>You have not created any election yet. </p>
        <%   
        }
        else{
        %>
        

        
        
        <div class="relative overflow-x-auto bg-gray-100 dark:bg-gray-800 shadow-md sm:rounded-lg p-4 mb-4">
            <div class="election-list text-right mb-4 p-4 sm:rounded-lg">
                <p class="text-sm text-gray-700 dark:text-gray-400 font-semibold">Total Election: <%=elections.length%></p>
            </div>
        <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
            <thead class="text-xs text-gray-700 uppercase bg-gradient-to-r from-teal-500 to-indigo-500 dark:bg-gray-800 dark:text-gray-400">
                
                <tr>
                    
                   
                    <th scope="col" class="px-6 py-3 text-center text-white">
                        S.No.
                    </th>
                    <th scope="col" class="px-6 py-3 text-center text-white">
                        Status
                    </th>
                    <th scope="col" class="px-6 py-3 text-center text-white">
                        Election Name
                    </th>
                    <th scope="col" class="px-6 py-3 text-center text-white">
                        Update / Delete
                     </th>
                    <th scope="col" class="px-6 py-3 text-center text-white">
                        Manage Ballot(Question/Voters)
                    </th>
                   
                    <th scope="col" class="px-6 py-3 text-center text-white">
                        Preview Election
                    </th>
                   
                    
                </tr>
            </thead>
            <tbody>
                <% for(let i = 0; i < elections.length; i++) { %>
                    <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-800">
                
                        
                        
                        <td class="px-6 py-4 text-center"><%= i+1%> </td>
                        <td class="px-6 py-4 text-center">
                            <p class="flex-none p-2 rounded-lg text-white <%= 
                            elections[i].start ? 
                              (elections[i].end ? 'bg-pink-500' : 'bg-indigo-500') :
                              'bg-teal-500'
                          %>">
                            <i class="bi <%= 
                              elections[i].start ? 
                                (elections[i].end ? 'bi-trophy-fill' : 'bi-play-circle-fill') :
                                'bi-hourglass-split'
                            %> pr-2"></i><%= 
                              elections[i].start ? 
                                (elections[i].end ? 'Completed' : 'In Progress') :
                                'Not Started'
                            %>
                          </p>
                          



                        </td>
                        <td class="px-6 py-4 text-center"><input type="text" 
                            class="text-center border border-gray-300 rounded-md p-2 transition-all duration-300 focus:outline-none focus:border-blue-500 focus:ring focus:ring-blue-200"
                            id="electionName<%= elections[i].id %>" name="electionName" value="<%= elections[i].name %>"  ></td>
                        <td class="px-6 py-4 text-center">
                            <a href="#" class="text-blue-500 hover:text-blue-700" onClick="ElectionNameUpdater(<%= elections[i].id %>)">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <a href="#" class="text-red-500 hover:text-red-700" onClick="ElectionNameDeleter(<%= elections[i].id %>)">
                            <i class="bi bi-x-octagon-fill"></i>
                            </a>
                        </td>
                          
                        <td class="px-6 py-4 btn btn-primary text-center">
                            <a href="/elections/<%= elections[i].id %>/ballotForm" class="text-green-500 hover:text-green-700">
                                <i class="bi bi-kanban"></i>
                            </a> 
                        </td>
                       
                        <td class="px-6 py-4 text-center">
                            <a href="/electionsPreview/<%= elections[i].id %>" class="text-purple-500 hover:text-purple-700">
                            <i class="bi bi-layout-text-sidebar-reverse"></i>
                                </a>
                        </td>
                        
                    </tr>
                    <% } %>
                
              
            </tbody>
        </table>
        <%
        }
        %>
    </div>
</div>
</div>
