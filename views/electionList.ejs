
<div class="grid grid-cols-4" id="loading" style="display:none;">
    <div class="col-start-2 col-span-2 p-4 my-4 rounded-lg">
        <h1 class="flex justify-center">Please wait....
            <img src="image/loading.gif" style="width:20px; "/>
        </h1>
    
    </div>
</div>
<div class="grid grid-cols-6 py-3 mx-8">
    <div class="col-start-1 col-span-6">
       
        <%
        if(elections.length==0)
        {
        %>
        <p>You have not created any election yet. </p>
        <%   
        }
        else{
        %>
        <div class="election-list text-right">
            <p>Total Election: <%=elections.length%></p>
        </div>

        
        
        <div class="relative overflow-x-auto shadow-md sm:rounded-lg">
        <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
            <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                
                <tr>
                    
                   
                    <th scope="col" class="px-6 py-3">
                        S.No.
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Status
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Election Name
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Update / Delete
                     </th>
                    <th scope="col" class="px-6 py-3">
                        Manage Ballot(Question/Voters)
                    </th>
                   
                    <th scope="col" class="px-6 py-3">
                        Preview Election
                    </th>
                   
                    
                </tr>
            </thead>
            <tbody>
                <% for(let i = 0; i < elections.length; i++) { %>
                    <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
                
                        
                        
                        <td class="px-6"><%= i+1%> </td>
                        <td class="px-6">
                            <p class="flex-none p-2 rounded-lg text-white <%= 
                            elections[i].start ? 
                              (elections[i].end ? 'bg-pink-500' : 'bg-indigo-500') :
                              'bg-teal-500'
                          %>">
                            <i class="bi <%= 
                              elections[i].start ? 
                                (elections[i].end ? 'bi-trophy-fill' : 'bi-play-circle-fill') :
                                'bi-hourglass-split'
                            %> pr-2"></i><%= 
                              elections[i].start ? 
                                (elections[i].end ? 'Completed' : 'In Progress') :
                                'Not Started'
                            %>
                          </p>
                          



                        </td>
                        <td class="px-6"><input type="text" id="electionName<%= elections[i].id %>" name="electionName" value="<%= elections[i].name %>"  ></td>
                        <td class="px-6">
                            <a href="#" onClick="ElectionNameUpdater(<%= elections[i].id %>)">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <a href="#" onClick="ElectionNameDeleter(<%= elections[i].id %>)">
                            <i class="bi bi-x-octagon-fill"></i>
                            </a>
                        </td>
                          
                        <td class="px-6 btn btn-primary">
                            <a href="/elections/<%= elections[i].id %>/ballotForm">
                                <i class="bi bi-kanban"></i>
                            </a> 
                        </td>
                       
                        <td class="px-6">
                            <a href="/electionsPreview/<%= elections[i].id %>">
                            <i class="bi bi-layout-text-sidebar-reverse"></i>
                                </a>
                        </td>
                        
                    </tr>
                    <% } %>
                
              
            </tbody>
        </table>
        <%
        }
        %>
    </div>
</div>
</div>
