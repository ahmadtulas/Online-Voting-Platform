<html>
    <head>
        <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="csrf-token" content="<%= csrfToken %>">
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css">
    <link href="./css/styles.css" rel="stylesheet"> 
    <script src="/js/main.js"></script>
    <title><%= title%></title>
    </head>
    <body>
        <%- include('signout.ejs') %>
        <div class="grid grid-cols-4">
            <div class="col-start-2 col-span-2 bg-gray-50 p-4 my-4 border rounded-lg">
                <h1 class="flex justify-center">Welcome to the dashboard</h1>
                <div>
                    <% if(messages && messages.error && messages.error.length > 0)  { %>
                        <% for(var i=0; i<messages.error.length; i++) { %>
                                <p class="rounded-full border-2 p-2 bg-red-400 text-white"> <%= messages.error[i] %></p>
                        <% } %>
                      <% } %>
                </div>
                 
                <form action="/addElection" method="post" class="">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                    <div class="py-3 md:ps-7 pt-2 pe-0  pb-4 space-y-2">
                        
                        <input type="text" name="electionName" placeholder="Enter the Election Name" 
                        class="cursor-pointer truncate h-10 border border-gray-300 focus:outline-none focus:border-primary-400 focus:shadow-inner px-4 items-center font-semibold rounded text-sm me-2 block w-full">
                       
                    </div>
                   
                    <div class="flex mt-3 justify-end">
                        <div class="tooltip ">
                        <div class="tooltip__trigger">
                            <button type="submit" class="text-white bg-green-700 hover:bg-green-900 font-medium rounded px-5 py-2"><span><i class="bi bi-plus-circle-fill"></i> Add Election</span></button>
                       
                        </div>
                        </div>
                    </div>
                </form>
               
            </div>
            
        </div>  
        
           
            <%- include('electionList.ejs') %>
        </div>
    </body>
    
</html>