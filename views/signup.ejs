<%- include('publicHeader.ejs') %>
<div id="root">
    <div class="relative w-full">
        <div class="container relative z-40 mx-auto p-4">
            <nav class="bg-slate-300 block w-full max-w-screen-2xl rounded-xl shadow-md backdrop-saturate-200 backdrop-blur-2xl bg-opacity-80 border border-white/80 text-white p-3">
                <div class="container mx-auto flex items-center justify-between text-blue-gray-900">
                    <p class="text-blue-900 block antialiased font-sans text-sm leading-normal mr-4 ml-2 cursor-pointer py-1.5 font-bold">
                        <a href="/">Online Voting Platform</a> 
                    </p>
                    <div class="">
                        <ul class="mb-4 mt-2 flex flex-col gap-2 lg:mb-0 lg:mt-0 lg:flex-row lg:items-center lg:gap-6">
                           
                            <li class="block antialiased font-mono text-lg font-black leading-normal text-blue-gray-900 capitalize">
                                Existing User? <a href="/login" class="text-green-900">Sign In</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </div> 
    </div>
</div>

<div class="absolute inset-1/4 flex items-center justify-center z-50">
    <div class="bg-black bg-opacity-50 shadow-lg p-4 rounded-md text-white max-w-md w-full">
        <div class="grid grid-cols-1">
            <div class="col-start-1 col-span-3">
              
                <h6 class="py-2 text-center">Sign Up for admin User</h6>
                <form action="/users" method="post">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                    <div class="py-2">
                        <label for="firstName">First Name:</label>
                        <input type="text" name="firstName" required
                        class="border border-gray-700 text-gray-900 rounded p-2 w-full">
                    </div>
                    <div class="py-2">
                        <label for="lastName">Last Name:</label>
                        <input type="text" name="lastName" required
                        class="border border-gray-700 text-gray-900 rounded p-2 w-full">
                    </div>
                    <div class="py-2">
                        <label for="email">Email:</label>
                        <input type="email" name="email" required
                        class="border border-gray-700 text-gray-900 rounded p-2 w-full">
                    </div>
                    <div class="py-2">
                        <label for="password">Password:</label>
                        <input type="password" name="password"
                        class="border border-gray-700 text-gray-900 rounded p-2 w-full">
                    </div>
                    <div class="py-2">
                        <button type="submit" class="text-white bg-red-700 hover:bg-red-900 font-medium  rounded-full px-5 py-2 w-full">Sign Up</button>
                    </div>
                </form>
            </div>
            <div>
                <% if(messages && messages.error && messages.error.length > 0)  { %>
                    <% for(var i=0; i<messages.error.length; i++) { %>
                            <li> <%= messages.error[i] %></li>
                    <% } %>
                  <% } %>
            </div>     
        </div>        

    </div>
</div>
<img src="/image/Elections.jpg" class="absolute inset-0 z-0 h-full w-full object-cover">

 
   
   
</body>
</html>