<%- include('publicHeader.ejs') %>
<div id="root">
    
    <div class="relative w-full">
        <img src="/image/Elections.jpg" class="absolute inset-0 z-0 h-full w-full object-cover">
        <div class="container relative z-40 mx-auto p-4">
            <nav class="bg-slate-300 block w-full max-w-screen-2xl rounded-xl shadow-md backdrop-saturate-200 backdrop-blur-2xl bg-opacity-80 border border-white/80 text-white p-3">
                <div class="container mx-auto flex items-center justify-between text-blue-gray-900">
                    <p class="text-blue-900 block antialiased font-sans text-sm leading-normal mr-4 ml-2 cursor-pointer py-1.5 font-bold">
                        <a class='text-green-700' href="/"><i class="bi bi-house-door"></i> Online Voting Platform </a> 
                    </p>
                    
                </div>
            </nav>
        </div> 
    </div>

</div>
           
<div class="grid grid-cols-6">
            <div class="col-start-3 col-span-2">
                <h6 class="py-6 text-center text-2xl">Sign In to the Ballot Casting Portal</h6>
                <h1 class="py-6 text-center text-2xl" style="color:red"><%= election.name %></h6>
                    <form action="/sessionVoter/<%= election.id %>" method="post">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                        <input type="hidden" name="electionId" value="<%= election.id %>" />
                        <div class="py-3">
                            <label for="voterId">Voter Id:</label>
                            <input type="text" name="voterId"
                            class="border border-gray-700 text-gray-900 rounded p-2 w-full">
                        </div>
                        <div class="py-3">
                            <label for="password">Password:</label>
                            <input type="password" name="password"
                            class="border border-gray-700 text-gray-900 rounded p-2 w-full">
                        </div>
                        <div class="py-3">
                            <button type="submit" class="text-white bg-blue-700 hover:bg-blue-900 font-medium rounded px-5 py-2">Sign In</button>
                        </div>
                    </form>
           
                </div>
        
        </div>
        
        
        <ul>
          <% if(messages && messages.error && messages.error.length > 0)  { %>
            <% for(var i=0; i<messages.error.length; i++) { %>
                    <li class="my-2 p-2 text-red-500 border border-red-500 bg-red-50 rounded"><%= messages.error[i] %></li>
            <% } %>
          <% } %>        
        </ul>
      </div>
    </body>
</html>